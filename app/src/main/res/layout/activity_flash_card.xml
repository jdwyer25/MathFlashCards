<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="dwyer.com.mathflashcards.FlashCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnDivideLight"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/divide_light"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnDivide"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/divide" />

        <Button
            android:id="@+id/btnMultiplicationLight"
            android:layout_width="@dimen/button_width_alt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/multiply_light"
            android:visibility="gone"
            />

        <Button
            android:id="@+id/btnMultiplication"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/multiply" />

        <Button
            android:id="@+id/btnMinusLight"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/minus_light"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnMinus"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/minus" />

        <Button
            android:id="@+id/btnPlusLight"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/plus_light"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPlus"
            android:layout_width="@dimen/button_width_alt"
            android:layout_height="wrap_content"
            android:background="@drawable/plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Space
            android:layout_width="10dp"
            android:layout_height="10dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:gravity="center|bottom">

        <TextView
            android:id="@+id/lblAnswer"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_answer"
            />

        <TextView
            android:id="@+id/txtAnswer"
            android:background="@drawable/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lblAnswer"
            android:paddingLeft="250dp"
            android:layout_marginBottom="20dp"
            />

        <Button
            android:layout_below="@+id/txtAnswer"
            android:id="@+id/btn7"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/seven"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn8"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/eight"
            android:layout_below="@+id/txtAnswer"
            android:layout_toRightOf="@+id/btn7"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btn9"
            android:layout_margin="2dp"
            android:layout_below="@+id/txtAnswer"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/nine"
            android:layout_toRightOf="@+id/btn8"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/btn4"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/four"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn7"/>

        <Button
            android:id="@+id/btn5"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/five"
            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/btn4"
            android:layout_below="@+id/btn8"/>

        <Button
            android:id="@+id/btn6"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/six"
            android:layout_toRightOf="@+id/btn5"
            android:layout_below="@+id/btn9"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btn1"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/one"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn4"/>

        <Button
            android:id="@+id/btn2"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/two"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn5"
            android:layout_toRightOf="@+id/btn1"/>

        <Button
            android:id="@+id/btn3"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/three"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn6"
            android:layout_toRightOf="@+id/btn2"/>

        <Button
            android:id="@+id/btn0"
            android:layout_margin="2dp"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:background="@drawable/number_button"
            android:text="@string/_0"
            android:textColor="#ffffff"
            android:layout_below="@+id/btn2"
            android:layout_toRightOf="@+id/btn1"/>

    </RelativeLayout>

</RelativeLayout>
